@model IEnumerable<DatabaseProject2015.Models.Order>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <title>OrdersIndex</title>
    <style>
        .table {
            margin: 10px 0px 0px 0px;
        }

        .row {
            margin-left: 5px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Game's House</a>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                        <li><a href="@Url.Action("ItemsIndex","Admin")">Products</a></li>
                        <li class="active"><a href="@Url.Action("OrdersIndex","Admin")">Orders</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="row">
            <div class="col-md-6">
                <h3>Orders</h3>
            </div>
            <div class="col-md-6" style="margin-left: -10px; margin-bottom: 20px">
                <div class="row">
                    <div class="col-md-4" style="margin-left: 10px">
                        Filter
                    </div>
                    <div class="col-md-6">

                    </div>
                </div>
                <div class="row">
                    @using(Html.BeginForm("OrdersIndex", "Admin", FormMethod.Post))
                    {
                        <form class="form-inline" role="form">
                            <div class="col-md-4" style="margin-right: -20px">
                                <select name="types" class="form-control">
                                    <option value="1">Order ID</option>
                                    <option value="2">Customer name</option>
                                    <option value="3">Order status</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="search" placeholder="Search..." />
                            </div>
                            <div class="col-md-2" style="margin-left: -20px">
                                <button style="height: 34px" type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered table-striped">
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DeliveryMethod)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderStatus)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateAdded)
                        </th>
                        <th></th>
                    </tr>

                    @{ Int64 counter = 1;}
                    @foreach (var item in Model)
            {
                        <tr>
                            <td>
                                @counter
                                @{ counter++;}
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DeliveryMethod)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderStatus)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateAdded)
                            </td>
                            <td>
                                @Html.ActionLink("Update", "UpdateOrderStatus", new { id = item.OrderID }) |
                                @Html.ActionLink("Details", "OrderDetails", new { id = item.OrderID })
                            </td>
                        </tr>
                                    }

                </table>
            </div>
        </div>
    </div>
</body>
</html>
