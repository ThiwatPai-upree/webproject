@model DatabaseProject2015.Models.Item

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <title>EditItem</title>
    <style>
        .form-group {
            overflow: auto;
        }
    </style>
    <script>
        $(document).ready(function () {
            $("#othercompany").hide();
            $("#othergenre").hide();
            $("#otherplatform").hide();
            $("#companies").change(function () {
                if (this.value == 0) {
                    $("#companies").hide();
                    $("#othercompany").show();
                }
            });
            $("#genres").change(function () {
                if (this.value == 0) {
                    $("#genres").hide();
                    $("#othergenre").show();
                }
            });
            $("#platforms").change(function () {
                if (this.value == 0) {
                    $("#platforms").hide();
                    $("#otherplatform").show();
                }
            });
        });
    </script>
</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Game's House</a>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                        <li><a href="@Url.Action("ItemsIndex","Admin")">Products</a></li>
                        <li><a href="#">Orders</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="row" style="margin-left:20px">
            <h3>Add Product</h3>
            <div class="col-md-10" style="margin:20px">
                <img style="width:200px; margin-left:190px" class="thumbnail" src="@Url.Content(@Model.ImageProfile)" />
                @using (Html.BeginForm("EditItem", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label class="control-label col-md-2" for="name">Image:</label>
                            <div class="col-md-6">
                                <input type="file" name="imageprofile">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2" for="name">Name:</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="name" placeholder="Game's name" value="@Model.Name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2" for="company">Company:</label>
                            <div class="col-md-6">
                                <select class="form-control" name="company" id="companies">
                                    @foreach (var company in ViewData["companies"] as List<company>)
                                    {
                                        if (company.companyname.Equals(@Model.CompanyName))
                                        {
                                            <option selected="selected" value="@company.companyID">
                                                @company.companyname
                                            </option>
                                        }
                                        else
                                        {
                                            <option value="@company.companyID">
                                                @company.companyname
                                            </option>
                                        }
                                    }
                                    <option value="0">
                                        Other
                                    </option>
                                </select>
                                <input type="text" id="othercompany" class="form-control" name="company" placeholder="Company's name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2" for="genre">Genre:</label>
                            <div class="col-md-6">
                                <select class="form-control" name="genre" id="genres">
                                    @foreach (var genre in ViewData["genres"] as List<genre>)
                                    {
                                        if (genre.genrename.Equals(Model.Genre))
                                        {
                                            <option selected="selected" value="@genre.genreID">
                                                @genre.genrename
                                            </option>
                                        }
                                        else
                                        {
                                            <option value="@genre.genreID">
                                                @genre.genrename
                                            </option>
                                        }

                                    }
                                    <option value="0">
                                        Other
                                    </option>
                                </select>
                                <input type="text" class="form-control" id="othergenre" name="genre" placeholder="Genre">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2" for="platform">Platform:</label>
                            <div class="col-md-6">
                                <select class="form-control" name="platform" id="platforms">
                                    @foreach (var platform in ViewData["platforms"] as List<platform>)
                                    {
                                        if (platform.platformname.Equals(Model.Platform))
                                        {
                                            <option selected="selected" value="@platform.platformID">
                                                @platform.platformname
                                            </option>
                                        }
                                        else
                                        {
                                            <option value="@platform.platformID">
                                                @platform.platformname
                                            </option>
                                        }
                                    }
                                    <option value="0">
                                        Other
                                    </option>
                                </select>
                                <input type="text" class="form-control" id="otherplatform" name="platform" placeholder="Platform's name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2" for="raitng">Rating:</label>
                            <div class="col-md-6">
                                <select class="form-control" name="rating">
                                    @foreach (var rate in ViewData["ratings"] as List<rating>)
                                    {
                                        if (rate.ratingname.Equals(Model.Rating))
                                        {
                                            <option selected="selected" value="@rate.ratingID">
                                                @rate.ratingname
                                            </option>
                                        }
                                        else
                                        {
                                            <option value="@rate.ratingID">
                                                @rate.ratingname
                                            </option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2" for="cost">Cost:</label>
                            <div class="col-md-6">
                                <input type="number" min="0" class="form-control" name="cost" placeholder="Cost" value="@Model.Cost">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2" for="sellingprice">Selling Price:</label>
                            <div class="col-md-6">
                                <input type="number" min="0" class="form-control" name="sellingprice" placeholder="Selling Price" value="@Model.SellingPrice">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2" for="quantity">Quantity:</label>
                            <div class="col-md-6">
                                <input type="number" min="0" class="form-control" name="quantity" placeholder="Quantity" value="@Model.Quantity">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2" for="description">Description:</label>
                            <div class="col-md-6">
                                <textarea style="max-width:500px; min-height: 200px" class="form-control" name="description" placeholder="Description">@Model.Description</textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-md-10">
                                <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-edit"></span> Update</button>
                                <a href="@Url.Action("ItemsIndex","Admin")" class="btn btn-default"><span class="glyphicon glyphicon-chevron-left"></span> Go Back</a>
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</body>
</html>
