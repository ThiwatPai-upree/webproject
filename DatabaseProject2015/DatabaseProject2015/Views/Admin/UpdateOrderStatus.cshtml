@model IEnumerable<DatabaseProject2015.orderstatus>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <title>UpdateOrderStatus</title>
    <style>
        .table {
            margin: 10px 0px 10px 0px;
        }

        .row {
            margin-left: 5px;
            margin-bottom: 50px;
        }

        .control-label {
            line-height: 35px;
            text-align: right;
        }

        .form-inline {
            margin-top: 20px;
            margin-left: 10px;
        }

        .col-sm-2 {
            text-align: right;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Game's House</a>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                        <li><a href="@Url.Action("ItemsIndex", "Admin")">Products</a></li>
                        <li><a href="@Url.Action("OrdersIndex", "Admin")">Orders</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="row">
            <h3>Order No.@ViewBag.orderdetail.OrderID</h3>
            @using (Html.BeginForm("UpdateOrderStatus", "Admin", FormMethod.Post))
            {
                <form class="form-inline" role="form">
                    <div class="form-group col-md-12">
                        <label class="control-label col-md-2">Order Status:</label>
                        <select class="form-control col-md-5" style="width: 30%" name="osID">
                            @foreach (var i in Model)
                            {
                                <option value="@i.orderstatusID">@i.orderstatusname</option>
                            }
                        </select>   
                        <button type="submit" style="margin-left: 20px" class="btn btn-default"><span class="glyphicon glyphicon-edit"></span> Update</button>
                        <a href="@Url.Action("OrdersIndex","Admin")" class="btn btn-default"><span class="glyphicon glyphicon-chevron-left"></span> Go Back</a>
                    </div>
                </form>
            }
        </div>
    </div>
</body>
</html>
