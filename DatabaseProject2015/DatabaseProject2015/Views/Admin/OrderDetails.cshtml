@model IEnumerable<DatabaseProject2015.Models.ItemOrder>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <title>OrderDetails</title>
    <style>
        .table {
            margin: 10px 0px 10px 0px;
        }

        .row {
            margin-left: 5px;
            margin-bottom: 50px;
        }
        .control-label {
            line-height: 35px;
        }
        .col-sm-1 {
            text-align: right;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Game's House</a>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                        <li><a href="@Url.Action("ItemsIndex", "Admin")">Products</a></li>
                        <li><a href="@Url.Action("OrdersIndex", "Admin")">Orders</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="row">
            <h3>Order No.@ViewBag.orderdetail.OrderID</h3>
            <div class="col-md-12">
                <div class="col-sm-2"></div>
                <label class="col-sm-1 control-label">Name: </label>
                <div class="col-sm-3">
                    <input readonly class="form-control" type="text" value="@ViewBag.userdetail.FirstName">
                </div>
                <label class="col-sm-1 control-label">Last-Name: </label>
                <div class="col-sm-3">
                    <input readonly class="form-control" type="text" value="@ViewBag.userdetail.LastName">
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-sm-2"></div>
                <label class="col-sm-1 control-label">Address: </label>
                <div class="col-sm-7">
                    <input readonly class="form-control" type="text" value="@ViewBag.userdetail.Address">
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-sm-2"></div>
                <label class="col-sm-1 control-label">District: </label>
                <div class="col-sm-3">
                    <input readonly class="form-control" type="text" value="@ViewBag.userdetail.District">
                </div>
                <label class="col-sm-1 control-label">SubDistrict: </label>
                <div class="col-sm-3">
                    <input readonly class="form-control" type="text" value="@ViewBag.userdetail.SubDistrict">
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-sm-2"></div>
                <label class="col-sm-1 control-label">Province: </label>
                <div class="col-sm-3">
                    <input readonly class="form-control" type="text" value="@ViewBag.userdetail.Province">
                </div>
                <label class="col-sm-1 control-label">Zipcode: </label>
                <div class="col-sm-3">
                    <input readonly class="form-control" type="text" value="@ViewBag.userdetail.Zipcode">
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-sm-2"></div>
                <label class="col-sm-1 control-label">Telephone: </label>
                <div class="col-sm-3">
                    <input readonly class="form-control" type="text" value="@ViewBag.userdetail.Telephone">
                </div>
                <label class="col-sm-1 control-label">E-mail: </label>
                <div class="col-sm-3">
                    <input readonly class="form-control" type="text" value="@ViewBag.userdetail.Email">
                </div>
            </div>
        </div>
        <hr style="border: 1px solid #d9d9d9" />
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered table-striped">
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ItemID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ImageProfile)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Total)
                        </th>
                    </tr>
                    @{ Int64 counter = 1;}
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @counter
                                @{ counter++;}
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ItemID)
                            </td>
                            <td>
                                <img style="width: 100px" class="thumbnail" src="@Url.Content(@item.ImageProfile)" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @{
                                    int amount = (int)item.Amount;
                                }
                                @amount
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Total)
                            </td>
                        </tr>
                                    }
                    <tr>
                        <td colspan="7"></td>
                    </tr>
                    <tr>
                        <td colspan="4" style="border-color: #d9d9d9 #d9d9d9 white white; background-color:white"></td>
                        <td colspan="2">
                            Total Price:
                        </td>
                        <td>
                            @ViewBag.Total
                        </td>
                    </tr>
                    <tr>
                        <td colspan="4" style="border-color: #d9d9d9 #d9d9d9 white white; background-color:white"></td>
                        <td colspan="2">
                            Delivery Fee:
                        </td>
                        <td>
                            @{
                                decimal fee = ViewBag.orderdetail.Total - ViewBag.Total;
                            }
                            @fee
                        </td>
                    </tr>
                    <tr>
                        <td colspan="4" style="border-color: #d9d9d9 #d9d9d9 white white; background-color:white"></td>
                        <td colspan="2">
                            Net Price:
                        </td>
                        <td>
                            @ViewBag.orderdetail.Total
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="row" style="text-align:center">
            <a href="@Url.Action("OrdersIndex","Admin")" class="btn btn-default"><span class="glyphicon glyphicon-chevron-left"></span> Go Back</a>
        </div>
    </div>
</body>
</html>
